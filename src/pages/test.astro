---
const positionOrder = {
  "manager": 3,
  "developer": 1,
  "designer": 2,
  // Add other positions as needed
};

const people = [
  { name: 'Alice', position: 'managerss' },
  { name: 'Bob', position: 'developer' },
  { name: 'David', position: 'designer' },
  { name: 'Charlie', position: 'unknown' }, // Example of unknown position
];
---

<div class="flex">
  {people.map(person => <div class={`text-center order-${positionOrder[person.position] || 'last'} p-4`}>
        <p>{person.name}</p>
      </div>
    )}
</div>