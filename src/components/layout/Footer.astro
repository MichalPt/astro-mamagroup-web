---
import { menuLinks, siteConfig } from "@/site.config";
import { Image } from "astro:assets";
import logoMffCuni from "@/assets/images/logo-mff-cuni-eng-100.png";

const year = new Date().getFullYear();
---

<footer
	class="semibold mt-auto flex w-full flex-col items-center justify-center gap-y-2 gap-x-4 pb-4 px-8 pt-8 min-h-[120px] text-center align-top text-accent text-sm md:flex-row md:justify-between md:text-sm">

	<div class="flex justify-center md:justify-end md:order-2">
		<a href="https://www.mff.cuni.cz/">
			<Image src={logoMffCuni} alt="logo-mff" height="150" width="300" class="dark:imginv"/>
		</a>
	</div>
	<div class="flex flex-col justify-center md:justify-start md:order-1">
		<div class="justify-center md:justify-left mb-1">
			<a href="https://www.mff.cuni.cz/cs/fuuk/oddeleni-teoreticke/vitejte" class="hover:text-accent hover:underline">
				Theoretical division
			</a>|
			<a href="https://www.mff.cuni.cz/cs/fuuk/oddeleni-biofyziky/vitejte" class="hover:text-accent hover:underline">
				Division of biophysics
			</a>|
			<a href="https://www.mff.cuni.cz/cs/fakulta/organizacni-struktura/katedra?code=102" class="hover:text-accent hover:underline">
				Institute of Physics
			</a>

		</div>
		<div class="justify-center me-0 font-semibold md:me-4 text-xs">
			&copy; {siteConfig.author} {year}
		</div>
	</div>
</footer>
