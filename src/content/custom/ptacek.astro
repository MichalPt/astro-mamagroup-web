---
const CVPath = "/group/ptacek/CV_2025_ENG.pdf";

const links = [
    {
        title: "CV",
        url: CVPath,
    },
    {
        title: "GitHub",
        url: "https://github.com/MichalPt/"
    }
]

const videos = [
    {
        title: "Open Quantum Sytems",
        url: "https://www.youtube.com/@openqsl2665",
        description: "a channel dedicated so far to nonlinear optical spectroscopy and quantum optics",
    },
    {
        title: "(Quantum) Strangeness",
        url: "https://www.youtube.com/@QuantumStrangeness",
        description: "a popular science channel about quantum physics, its history and basic concepts",
    },
];
---

<div class="flex flex-col items-center gap-y-6">
    <div class="flex flex-row space-x-2 items-center">
        {links.map((link) => (
            <a href={link.url} target="_blank" class="px-2 py-1 bg-gray-200/75 dark:bg-gray-900/75 rounded-lg justify-center items-center hover:brightness-90 dark:hover:brightness-110 transition-all duration-100">
                {link.title}
            </a>
        ))}
    </div>

    <div>
        <div>
            Editor & co-author (with <a href="/mancal" class="citrus-link">Tomáš</a>) of YouTube channels:
        </div>
        <ul class="list-disc">
            {videos.map((video) => (
                <li class="mt-2 ml-8">   
                    <a href={video.url} class="citrus-link">
                        {video.title}
                    </a>
                    <div class="text-sm font-extralight text-gray-300 dark:text-gray-600">
                        {video.description}
                    </div> 
                </li>
            ))}
        </ul>
    </div>

</div>
